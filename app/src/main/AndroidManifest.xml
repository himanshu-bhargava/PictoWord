<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.vit.assignment.pictoword">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/pictoword"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pictoword"
        android:supportsRtl="true"
        android:theme="@style/Theme.PictoWord">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.PictoWord.NoActionBar"
         ></activity>
        <activity android:name="com.sb.play.pictoword.EnlargePics" />
        <activity android:name="com.sb.play.pictoword.Rounds" />
        <activity
            android:name="com.sb.play.pictoword.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7566740815223579~1482603871" />
    </application>

</manifest>