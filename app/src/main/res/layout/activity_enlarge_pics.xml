<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#023E8A"
    tools:context="com.sb.play.pictoword.EnlargePics">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/bigImage"
        android:layout_width="0dp"
        android:layout_height="315dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bigImage"
        app:layout_constraintVertical_bias="0.1">

        <Button
            android:id="@+id/hintButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#023E8A"
            android:backgroundTint="#0077B6"
            android:onClick="hint"
            android:text="Hint"
            android:textColor="#ADE8F4"
            android:textColorHighlight="#CAF0F8"
            android:textColorHint="#CAF0F8"
            android:textColorLink="#CAF0F8" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>